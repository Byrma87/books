   <h2>Новая Книга</h2>
  <%= form_for @book, html: { multipart: true } do  |f| %>
 <div class="form-goup">
    <%= f.label :Название %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :Содержание %><br>
    <%= f.text_area :contents %>
  </div>
  <div class="field">
    <%= f.label :Жанр %><br>
    <%= f.text_area :genre %>
  </div>
  
  <label>Обложка</label>
    <%= image_tag(@book.image_url) if @book.image? %> 
    <%= f.file_field :image, multiple: true %>
  <p>
  <div class="actions">
    <%= submit_tag 'Создать', class: 'btn btn-success' %>
  </div>
  </p>
<% end %>